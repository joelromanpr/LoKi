<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_passcode_pins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.joelromanpr.loki.PasscodePinView
            android:id="@+id/pin1"
            android:layout_width="@dimen/passcode_pin_diameter"
            android:layout_height="@dimen/passcode_pin_diameter"
            android:layout_marginRight="@dimen/passcode_horizontal_padding" />

        <com.joelromanpr.loki.PasscodePinView
            android:id="@+id/pin2"
            android:layout_width="@dimen/passcode_pin_diameter"
            android:layout_height="@dimen/passcode_pin_diameter"
            android:layout_marginRight="@dimen/passcode_horizontal_padding" />

        <com.joelromanpr.loki.PasscodePinView
            android:id="@+id/pin3"
            android:layout_width="@dimen/passcode_pin_diameter"
            android:layout_height="@dimen/passcode_pin_diameter"
            android:layout_marginRight="@dimen/passcode_horizontal_padding" />

        <com.joelromanpr.loki.PasscodePinView
            android:id="@+id/pin4"
            android:layout_width="@dimen/passcode_pin_diameter"
            android:layout_height="@dimen/passcode_pin_diameter" />
    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/passcode_input_margin"
        android:columnCount="3">

        <Button
            android:id="@+id/button1"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="1"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="@dimen/passcode_input_padding"
            android:layout_marginRight="@dimen/passcode_input_padding"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="2"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button3"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="3"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button4"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="4"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="@dimen/passcode_input_padding"
            android:layout_marginRight="@dimen/passcode_input_padding"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="5"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button6"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="6"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button7"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="7"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button8"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="@dimen/passcode_input_padding"
            android:layout_marginRight="@dimen/passcode_input_padding"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="8"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button9"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="9"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/space"
            android:clickable="false"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button0"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginLeft="@dimen/passcode_input_padding"
            android:layout_marginRight="@dimen/passcode_input_padding"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="0"
            android:textSize="@dimen/text_size_pin_code" />

        <Button
            android:id="@+id/button_delete"
            style="?android:attr/borderlessButtonStyle"
            android:background="@drawable/default_ripple"
            android:fontFamily="sans-serif-light"
            android:paddingTop="@dimen/passcode_input_padding"
            android:paddingBottom="@dimen/passcode_input_padding"
            android:text="DEL"
            android:textSize="19sp" />
    </GridLayout>
</LinearLayout>